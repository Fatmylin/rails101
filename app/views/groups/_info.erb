<tr>
  <td>#</td>
  <td><%= link_to(group['title'], group_path(group['id'])) %></td>
  <td><%=simple_format(group['description'], class:'text-danger') %></td>
  <td><%= group['user']['name'] %></td>
  <td>
    <% if current_user && current_user.id == group['user']['id']%>
      <%= link_to('編輯', edit_group_path(group['id']), class: 'btn btn-sm btn-default') %>
      <%= link_to('刪除', group_path(group['id']), class: 'btn btn-sm btn-default', method: :delete, data: { confirm: '確定要刪除嗎？' }) %>
    <% end %>
  </td>
</tr>
