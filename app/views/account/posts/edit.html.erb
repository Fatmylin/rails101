<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h2 class="text-center">修改發問</h2>
    <hr>
    <%= simple_form_for(:account, @post) do |f| %>
      <div class="form-group">
        <%= f.input(:context, label: '內容:', input_html: { class: 'form-control' }) %>
      </div>
      <%= f.submit('確認', class: 'btn btn-primary', data: { disable_with: 'Submitting...' }) %>
    <% end %>
  </div>
</div>
