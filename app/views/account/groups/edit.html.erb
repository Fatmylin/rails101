<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h2>修改群組</h2>
    <hr>
    <%= simple_form_for(@group, url: account_group_path) do |f| %>
      <div class="form-group">
        <%= f.input(:title, label: '群組', input_html: { class: 'form-control' }) %>
        <%= f.input(:description, label: '敘述', input_html: { class: 'form-control' }) %>
      </div>
      <%= f.submit('確認', class: 'btn btn-primary', data: { disable_with: 'Submitting...' }) %>
    <% end %>
  </div>  
</div>
