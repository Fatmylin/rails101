<div class="col-md-12">
  <h2 class="text-center">我的群組</h2>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>群組</td>
        <td>群組敘述</td>
        <td>版主大大</td>
      </tr>
    </thead>
    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td>#</td>
          <td><%= link_to(group.title, group_path(group)) %></td>
          <td><%= group.description %></td>
          <td><%= group.user.name %></td>
          <td>
            <%= link_to('編輯', edit_account_group_path(group), class: 'btn btn-sm btn-default') %>
            <%= link_to('刪除', account_group_path(group), class: 'btn btn-sm btn-default', method: :delete, data: { confirm: '確定要刪除嗎？' }) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
