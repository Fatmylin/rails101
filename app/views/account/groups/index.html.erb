<div class="col-md-12">
  <h2 class="text-center">我的群組</h2>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>群組</th>
        <th>群組敘述</th>
      </tr>
    </thead>
    <tbody>
      <% @groups_info.each do |info| %>
        <tr>
          <td>#</td>
          <td><%= link_to(info.group.title, group_path(info.group)) %></td>
          <td><%= info.group.description %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
